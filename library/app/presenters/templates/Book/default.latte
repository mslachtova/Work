{block content}
    <h1 n:block="title">Knižní katalog</h1>
	<table style="width:100%">
	  <tr>
	    <th>Titul</th>
	    <th>Autor</th> 
	    <th>Rok vydání</th>
	    <th>ISBN</th>
	  </tr>
	  {foreach $books as $book}
	  <tr>
	    <td><a n:href="Book:show $book->id">{$book->title}</a></td>
	    <td>{$book->author}</td> 
	    <td>{$book->release_year}</td>
	    <td>{$book->ISBN}</td>
	  </tr>
	  {/foreach}
	</table>	
{/block}